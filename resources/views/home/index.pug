extends /layout/disconnected

block variables
	- const brand = "nairi.dev"
	- const slogan = "Blog orienté programmation web, par les frères Nairi."
	- const title = "Accueil"
	- const description = slogan

block content
	include /component/article
	include /component/footer
	include /component/navbar
	include /component/navbar-item

	+navbar({ color: "black", brand: brand })
		+navbar-item({ title: "Articles", url: "/article" })
		+navbar-item({ title: "À propos", url: "/a-propos" })
		+navbar-item({ title: "Github", url: "https://github.com/khalyomede/nairi-dev" })

	.container
		.row
			.col.s12.center-align
				h1 #{brand}
				div #{slogan}
		.row
			for article in articles
				.col.s12.m6.l6.xl4
					+article({
						image: article.image,
						title: article.title,
						excerpt: article.excerpt,
						url: article.url
					})

	+footer({
		color: "black",
		brand: brand,
		slogan: slogan,
		copyright: "© 2019 nairi.dev"
	})
