mixin post(parameters)
    - const date = new Date(parameters.publishDate)
    - const publishDate = `${date.getDate().toString().padStart(2, "0")}/${date.getMonth().toString().padStart(2, "0")}/${date.getFullYear()}`

    .card
        .card-image
            img(src=parameters.image alt=parameters.title)
        .card-content
            h2.card-title(style="margin-top: 0px; font-weight: bold;") #{parameters.title}
            p.grey-text #{publishDate}
            div
                br
            p #{parameters.excerpt}
        .card-action
            a(href=parameters.url) lire plus
