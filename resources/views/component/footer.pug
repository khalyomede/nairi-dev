	footer.page-footer(class=parameters.color)
		.container
			.row
				.col.l6.s12
					h5.white-text #{parameters.brand}
					p.grey-text.text-lighten-4 #{parameters.slogan}
				.col.l4.offset-l2.s12.right-align
					h5.white-text En savoir plus
					ul
						li
							a.grey-text.text-lighten-3(href='#!') Link 1
						li
							a.grey-text.text-lighten-3(href='#!') Link 2
						li
							a.grey-text.text-lighten-3(href='#!') Link 3
						li
							a.grey-text.text-lighten-3(href='#!') Link 4
		.footer-copyright
			.container
				.row
					.col.s12
						| #{parameters.copyright}
